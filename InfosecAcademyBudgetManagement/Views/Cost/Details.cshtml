@model Cost.CostItem

@{
    ViewData["Title"] = "Masraf Detay";
}

<div class="page-header">
    <div>
        <h1 class="page-title">Masraf Detay</h1>
        <div class="page-subtitle">Kayıt detaylarını inceleyin.</div>
    </div>
</div>

<div class="card content-card">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Name)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Name)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Amount)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(m => m.Amount) TL</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Date)</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd.MM.yyyy")</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Category)</dt>
            <dd class="col-sm-9">@Model.Category?.Name</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
            <dd class="col-sm-9">@Model.Description</dd>

            <dt class="col-sm-3">Evrak</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrWhiteSpace(Model.DocumentPath))
                {
                    <a asp-action="DownloadDocument" asp-route-id="@Model.Id" class="btn btn-sm btn-outline-secondary">
                        <i class="bi bi-file-earmark-pdf"></i> PDF Görüntüle
                    </a>
                }
                else
                {
                    <span class="text-muted">Evrak yok</span>
                }
            </dd>
        </dl>
    </div>
</div>

<div class="form-actions mt-3">
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Düzenle</a>
    <a asp-action="Index" class="btn btn-outline-secondary">Geri</a>
</div>

