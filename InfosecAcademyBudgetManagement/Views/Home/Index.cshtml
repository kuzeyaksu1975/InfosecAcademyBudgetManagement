@model InfosecAcademyBudgetManagement.Models.DashboardViewModel

@{
    ViewData["Title"] = "Gösterge Paneli";
}

<div class="dashboard-hero rounded-4 p-4 p-lg-5 mb-4">
    <div class="d-flex flex-column flex-lg-row align-items-start align-items-lg-center justify-content-between gap-3">
        <div>
            <div class="stat-chip mb-2">
                <i class="bi bi-graph-up-arrow"></i>
                Finans Özeti
            </div>
            <h1 class="dashboard-title display-6 mb-2">Gösterge Paneli</h1>
            <p class="dashboard-subtitle mb-0">Son 12 aya ait harcama eğilimleri ve kategori dağılımları.</p>
        </div>
        <div class="d-flex gap-2">
            <a asp-controller="Cost" asp-action="Index" class="btn btn-light">
                <i class="bi bi-receipt"></i> Masraflar
            </a>
            <a asp-controller="Category" asp-action="Index" class="btn btn-outline-light">
                <i class="bi bi-tags"></i> Kategoriler
            </a>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card chart-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column">
                <div class="stat-label">Senelik Planlanan</div>
                <div class="stat-value fs-3">@Model.YearPlannedBudget.ToString("N2") TL</div>
                <div class="chart-wrapper">
                    <canvas id="plannedYearChart"></canvas>
                </div>
                
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card chart-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column">
                <div class="stat-label">Senelik Harcanan</div>
                <div class="stat-value fs-3">@Model.YearActualSpend.ToString("N2") TL</div>
                <div class="chart-wrapper">
                    <canvas id="actualYearChart"></canvas>
                </div>
                
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card chart-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column">
                <div class="stat-label">Senelik Kalan</div>
                <div class="stat-value fs-3">@Model.YearRemainingBudget.ToString("N2") TL</div>
                <div class="chart-wrapper">
                    <canvas id="remainingYearChart"></canvas>
                </div>
                
            </div>
        </div>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card stat-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column justify-content-between">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-label">Toplam Harcama</div>
                    <span class="stat-icon stat-icon-primary"><i class="bi bi-cash-coin"></i></span>
                </div>
                <div class="stat-value">@Model.TotalSpend.ToString("N2") TL</div>
                <div class="text-muted">Tüm kayıtların toplamı</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column justify-content-between">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-label">En Yüksek Kategori</div>
                    <span class="stat-icon stat-icon-success"><i class="bi bi-tags"></i></span>
                </div>
                <div class="h4 mb-1">@Model.TopCategoryName</div>
                <div class="stat-value fs-3">@Model.TopCategoryTotal.ToString("N2") TL</div>
                <div class="text-muted">Kategori lideri</div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card stat-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column justify-content-between">
                <div class="d-flex align-items-center justify-content-between">
                    <div class="stat-label">En Çok Harcama Yapılan Tarih</div>
                    <span class="stat-icon stat-icon-warning"><i class="bi bi-calendar-event"></i></span>
                </div>
                <div class="h4 mb-1">@Model.TopDateLabel</div>
                <div class="stat-value fs-3">@Model.TopDateTotal.ToString("N2") TL</div>
                <div class="text-muted">Tek gün zirvesi</div>
            </div>
        </div>
    </div>
</div>

<div class="row g-4">
    <div class="col-lg-8">
        <div class="card chart-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3">Aylık Toplam Harcamalar</h5>
                <div class="chart-wrapper">
                    <canvas id="monthlyChart"></canvas>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4">
        <div class="card chart-card h-100 dashboard-card">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title mb-3">Kategori Oranları</h5>
                <div class="chart-wrapper">
                    <canvas id="categoryChart"></canvas>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/chart.js/dist/chart.umd.min.js"></script>
@if (!Model.HasYearPlan)
{
    <script>
        window.showSwalWarning("Bu yıl için bütçe planı bulunamadı.");
    </script>
}
    <script>
        const plannedYear = @Model.YearPlannedBudget;
        const actualYear = @Model.YearActualSpend;
        const remainingYear = @Model.YearRemainingBudget;

        const donutOptions = {
            responsive: true,
            plugins: { legend: { display: false } },
            cutout: "70%"
        };

        new Chart(document.getElementById("plannedYearChart"), {
            type: "doughnut",
            data: {
                labels: ["Planlanan"],
                datasets: [{
                    data: [plannedYear || 0],
                    backgroundColor: ["#0d6efd"]
                }]
            },
            options: donutOptions
        });

        new Chart(document.getElementById("actualYearChart"), {
            type: "doughnut",
            data: {
                labels: ["Gerçekleşen"],
                datasets: [{
                    data: [actualYear || 0],
                    backgroundColor: ["#20c997"]
                }]
            },
            options: donutOptions
        });

        new Chart(document.getElementById("remainingYearChart"), {
            type: "doughnut",
            data: {
                labels: ["Kalan"],
                datasets: [{
                    data: [Math.max(remainingYear, 0)],
                    backgroundColor: ["#ffc107"]
                }]
            },
            options: donutOptions
        });

        const monthLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthLabels));
        const monthTotals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.MonthTotals));
        const categoryLabels = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CategoryShares.Select(x => x.Name)));
        const categoryTotals = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.CategoryShares.Select(x => x.Total)));

        const monthlyCtx = document.getElementById("monthlyChart");
        new Chart(monthlyCtx, {
            type: "bar",
            data: {
                labels: monthLabels,
                datasets: [{
                    label: "Toplam (TL)",
                    data: monthTotals,
                    backgroundColor: "rgba(13, 110, 253, 0.45)",
                    borderColor: "rgba(13, 110, 253, 0.9)",
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });

        const categoryCtx = document.getElementById("categoryChart");
        new Chart(categoryCtx, {
            type: "doughnut",
            data: {
                labels: categoryLabels,
                datasets: [{
                    data: categoryTotals,
                    backgroundColor: [
                        "#0d6efd",
                        "#20c997",
                        "#ffc107",
                        "#fd7e14",
                        "#6f42c1",
                        "#dc3545",
                        "#0dcaf0"
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: "bottom"
                    }
                }
            }
        });
    </script>
}



