{
  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET 8 Launch",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/InfosecAcademyBudgetManagement/bin/Debug/net8.0/InfosecAcademyBudgetManagement.dll",
      "args": [],
      "cwd": "${workspaceFolder}/InfosecAcademyBudgetManagement",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ]
}
